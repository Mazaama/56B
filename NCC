  <script>
    const STORAGE_KEY = 'ruwaiscamp_tickets_v2';
    const EVENT_KEY = 'ruwaiscamp_events_v1';

    function generateId(){return 'RC-' + Date.now().toString(36).slice(-6).toUpperCase()}
    function load(key){try{return JSON.parse(localStorage.getItem(key)||'[]')}catch(e){return []}}
    function save(key,data){localStorage.setItem(key,JSON.stringify(data))}

    function renderTickets(){
      const tickets = load(STORAGE_KEY);
      const list = document.getElementById('ticketsList');
      if(!tickets.length){list.innerHTML='<div class="muted">No tickets yet.</div>';return}
      list.innerHTML = tickets.map(t=>`<div style="padding:6px;border-bottom:1px solid #eee"><strong>${t.id}</strong> [${t.type}] ‚Äî ${t.desc} <em class='muted'>(${t.status})</em></div>`).join('');
    }
    function submitTicket(e){
      e.preventDefault();
      const id=generateId();
      const name=document.getElementById('name').value;
      const type=document.getElementById('type').value;
      const desc=document.getElementById('desc').value;
      const tickets=load(STORAGE_KEY);
      tickets.unshift({id,name,type,desc,status:'Open'});
      save(STORAGE_KEY,tickets);
      document.getElementById('ticketResult').innerHTML=`<div style='color:green'>Complaint submitted! Ticket ID: <strong>${id}</strong></div>`;
      e.target.reset();renderTickets();
      return false;
    }

    function renderEvents(){
      const ev=load(EVENT_KEY);
      const list=document.getElementById('eventList');
      if(!ev.length){list.innerHTML='No confirmations yet.';return}
      list.innerHTML=ev.map(e=>`<div style='padding:6px;border-bottom:1px solid #eee'>${e.name} confirmed for <strong>${e.movie}</strong></div>`).join('');
    }
    function submitEvent(e){
      e.preventDefault();
      const name=document.getElementById('ename').value;
      const movie=document.getElementById('movie').value;
      const ev=load(EVENT_KEY);
      ev.unshift({name,movie});
      save(EVENT_KEY,ev);
      document.getElementById('eventResult').innerHTML=`<div style='color:blue'>Thank you, ${name}! Your seat for <strong>${movie}</strong> is confirmed.</div>`;
      e.target.reset();renderEvents();
      return false;
    }

    renderTickets();
    renderEvents();
  </script>
